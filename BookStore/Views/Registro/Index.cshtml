<link rel="stylesheet" href="~/css/Apresentacao/styles.css" asp-append-version="true" />
@model BookStore.Models.User;
@{
}
<div class="container d-flex flex-column justify-content-center align-items-center w-100 h-100 gap-2">
    <div class="crd-grey">
        <img src="~/img/sorvil-logo.png" />

        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div>
               <input asp-for="Nome" type="text" class="form-control mb-2" id="txtNome" placeholder="Nome" style="width: 240px;height: 58px;">
               <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div>
                <input asp-for="Sobrenome" type="text" class="form-control mb-2" id="txtSobrenome" placeholder="Sobrenome" style="width: 240px;height: 58px;">
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>

            <div>
                <input asp-for="Email" type="email" class="form-control mb-2" id="txtEmail" placeholder="Email" style="width: 240px;height: 58px;">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div>
                <input asp-for="Senha" type="password" class="form-control mb-2" id="pswdSenha" placeholder="Senha" style="width: 240px;height: 58px;">
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <input class="srvl-btn-green" style="width: 240px;height: 45px;" value="R E G I S T R A R" type="submit" />
        </form>

        <button class="srvl-btn-white" style="width: 240px;height: 35px;" onclick="location.href='@Url.Action("Index","Apresentacao")'">
            V O L T A R
        </button>
    </div>  
</div>

